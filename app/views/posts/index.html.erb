<h1>Posts</h1>
<%= link_to "New Post", new_post_path %>
<% if user_signed_in? %>
<%= button_to "Logout", destroy_user_session_path, method: :delete %>

<% else %>

<%= button_to "Sign in", new_user_session_path %>
<% end %>
<% @posts.each do |post| %>
  <h2><%= post.title %></h2>
  <p>Written by: 
  
  <% if user_signed_in? %>
  <%= post.user.email %>
<% else %>
  Anonymous    
  <% end %>
  
  </p>
  <p><%= post.content %></p>
  <br>
  <% end %>